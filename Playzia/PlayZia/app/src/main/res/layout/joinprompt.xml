<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="7dp"
        app:cardPreventCornerOverlap="true">
        <RelativeLayout android:id="@+id/mainRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/topHeader"
                android:background="@color/blueRandom"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter  PUBG  Username"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/accessCodeInfoText"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/private_match_text"
                android:layout_below="@+id/topHeader" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/accessCodeView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/accessCodeInfoText">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/accessCode"
                    android:paddingLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="35dp"
                    android:hint="Access Code"
                    android:maxLength="10"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@+id/accessCodeView">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/gameID"
                    android:paddingLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="35dp"
                    android:hint="PUBG Username"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:textColor="#ff0000"
                android:id="@+id/textError"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginBottom="2dp"
                android:text="Enter PUBG Username"
                android:layout_below="@+id/editText"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_below="@+id/textError">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/cancel"
                        android:background="@drawable/background_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:backgroundTint="#757575"/>
                </LinearLayout>
                <LinearLayout android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/next"
                        android:background="@drawable/background_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textAllCaps="true"
                        android:backgroundTint="@color/blueRandom"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
